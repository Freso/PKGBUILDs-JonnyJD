build() {
  plugindir=${pkgdir}/usr/lib/python2.7/site-packages/picard/plugins
  cd "$srcdir"
  mkdir -p $plugindir
  cp discnumber.py featartist.py featartistsintitles.py titlecase.py \
    classicdiscnumber.py padded.py bonusdisc.py \
    coverart.py addrelease.py cuesheet.py release_type.py \
    no_release.py \
    encoding.py originalreleasedate.py titlesort.py titleversion.py \
    swapprefix.py searchpuid.py tso2-0.2.py addtoitunes-0.1.py \
    bonusdiscnumber.py converttypographicpunctuation-0.1.3.py \
    f2k_rgscan.py metaflac_rgscan.py \
    open_in_gui.py removeperfectalbums.py \
    appendformat-0.1.py $plugindir || return 1
  mkdir -p $plugindir/lastfm
  cp __init__.py ui_options_lastfm.py $plugindir/lastfm || return 1
}

